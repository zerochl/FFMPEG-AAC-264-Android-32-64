<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zero.smallvideo2">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.zero.smallvideo2.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zero.smallvideo2.VideoPlayerActivity"
            android:theme="@style/AppNoBarTheme"

            />
        <activity
            android:name="com.zero.smallvideorecord.MediaRecorderActivity"
            android:theme="@style/AppNoBarTheme"
            />
        <activity
            android:name="com.zero.smallvideo2.SendSmallVideoActivity"
            android:theme="@style/AppNoBarTheme" />
    </application>

</manifest>